<% layout('base') -%>
    <div class="container">
        <div class="row mx-0">
            <div class="col-lg-12 col-xl-12">
                <div class="card" style="border-radius: 10px;">
                    <div class="d-flex card-header px-4 py-5">
                        <div class="mr-auto">
                            <h5 class="text-muted mb-0"><span style="color: #a8729a;font-size: 26px;">
                                Người nhập: <%= data.user.name %> 
                            </span></h5>
                        </div>
                            <div class="">
                                <a href="/imports"><button class="btn btn-primary">Quay lại</button></a>
                            </div>
                    </div>
                    <div class="card-body p-4">
                        <% data.invoice.forEach(function(value) {const name=value.title.length>
                            28?value.title.slice(0,29):value.title;
                            %>
                            <div class="card shadow-0 border mb-4">
                                <div class="card-body">
                                    <div class="row">
                                        <div class="col-md-3">
                                            <img src="<%= value.image%>" class="img-fluid" alt="Phone">
                                        </div>
                                        <div class="col-md-3 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0">
                                                <%= name %>
                                            </p>
                                        </div>
                                        <div class="col-md-3 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">Số lượng: <%= value.quantity%>
                                            </p>
                                        </div>
                                        <div class="col-md-3 text-center d-flex justify-content-center align-items-center">
                                            <p class="text-muted mb-0 small">
                                                <%= value.price%> VND 
                                            </p>
                                        </div>
                                    </div>
    
                                </div>
                            </div>
                            <% }); %>
    
    
                                <div class="d-flex justify-content-between pt-2">
                                    <p class="fw-bold mb-0">Chi tiết hóa đơn: <%= data._id %></p>
                                </div>
    
                                <div class="d-flex justify-content-between">
                                    <p class="text-muted mb-0">Ngày nhập: <%=data.date%>
                                    </p>
                                    <p class="text-muted mb-0"><span class="fw-bold me-4">Tổng</span>
                                        <%=data.totalPrice%> VND
                                    </p>
                                </div>
                    </div>
                    <div class="card-footer border-0 px-4 py-5"
                        style="background-color: #a8729a; border-bottom-left-radius: 10px; border-bottom-right-radius: 10px;">
                        <h5 class="d-flex align-items-center justify-content-end text-white text-uppercase mb-0">Tổng phải trả: <span class="h2 mb-0 ms-2">
                                <%=data.totalPrice%> VND
                            </span></h5>
                    </div>
                </div>
            </div>
        </div>
    </div>